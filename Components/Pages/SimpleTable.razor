@page "/simple-table"

<PageTitle>Simple table</PageTitle>

<MudContainer Class="my-4">
    <MudText Typo="Typo.h4" Class="mb-4">Employee List</MudText>

    <MudTable Items="@_employees" Hover="true" Dense="true">
        <HeaderContent>
            <MudTh>ID</MudTh>
            <MudTh>Name</MudTh>
            <MudTh>Position</MudTh>
            <MudTh>Department</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Id</MudTd>
            <MudTd>@context.Name</MudTd>
            <MudTd>@context.Position</MudTd>
            <MudTd>@context.Department</MudTd>
        </RowTemplate>
    </MudTable>
</MudContainer>

@code {

    private readonly List<Employee> _employees = [
        new() { Id = 1, Name = "Tonny Johnson", Position = "Developer", Department = "IT" },
        new() { Id = 2, Name = "Jane Smith", Position = "Manager", Department = "HR" },
        new() { Id = 3, Name = "John Doe", Position = "Designer", Department = "Marketing" },
        new() { Id = 4, Name = "Alice Brown", Position = "Analyst", Department = "Finance" }
    ];

    public struct Employee {
        public int Id { get; init; }
        public string Name { get; init; }
        public string Position { get; init; }
        public string Department { get; init; }
    }

}