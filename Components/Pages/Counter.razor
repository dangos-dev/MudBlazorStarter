@page "/counter"
@rendermode InteractiveServer

<MudContainer Class="my-4">
    <PageTitle>Counter</PageTitle>

    <MudText Typo="Typo.h4" Class="mb-4">
        Counter
    </MudText>

    <MudText Typo="Typo.body1">
        @_currentCount dangos @string.Concat(Enumerable.Repeat("🍡", _currentCount))
    </MudText>

    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Increment" Disabled="@(_currentCount >= 10)">
        Add 🍡
    </MudButton>

    <MudButton Variant="Variant.Filled" OnClick="Decrement" Disabled="@(_currentCount <= 0)">
        Remove 🍡
    </MudButton>

</MudContainer>

@code {
    private int _currentCount;

    private void Increment() => _currentCount++;
    private void Decrement() => _currentCount--;
}